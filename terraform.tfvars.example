# Azure Location Configuration
location = "East US"

# Alternative locations:
# location = "East US 2"
# location = "West US 2"
# location = "Central US"
# location = "North Europe"
# location = "West Europe"
# location = "Southeast Asia"

# Resource Group Configuration
resource_group_name = "terraform-rg"

# Virtual Network Configuration
vnet_name            = "terraform-vnet"
vnet_address_space   = "10.0.0.0/16"
subnet_name          = "terraform-subnet"
subnet_address_prefix = "10.0.1.0/24"

# Virtual Machine Configuration
vm_name        = "terraform-vm"
vm_size        = "Standard_B2s"
admin_username = "azureuser"

# Alternative VM sizes:
# vm_size = "Standard_B1s"      # 1 vCPU, 1 GB RAM (smallest)
# vm_size = "Standard_B2s"      # 2 vCPUs, 4 GB RAM (default)
# vm_size = "Standard_B2ms"     # 2 vCPUs, 8 GB RAM
# vm_size = "Standard_D2s_v5"   # 2 vCPUs, 8 GB RAM (better performance)
# vm_size = "Standard_F2s_v2"   # 2 vCPUs, 4 GB RAM (compute optimized)

# SSH Configuration
ssh_public_key_path = "~/.ssh/id_rsa.pub"
allowed_ssh_sources = ["0.0.0.0/0"]  # CHANGE THIS: Restrict to your IP for security
# Example: allowed_ssh_sources = ["203.0.113.0/32"]  # Your public IP

# OS Disk Configuration
os_disk_caching      = "ReadWrite"
os_disk_storage_type = "Standard_LRS"  # Options: Standard_LRS, StandardSSD_LRS, Premium_LRS
os_disk_size_gb      = 30

# Storage type options:
# Standard_LRS      - Standard HDD (cheapest)
# StandardSSD_LRS   - Standard SSD (balanced)
# Premium_LRS       - Premium SSD (fastest, requires premium-capable VM size)

# Image Configuration (Ubuntu 22.04 LTS)
image_publisher = "Canonical"
image_offer     = "0001-com-ubuntu-server-jammy"
image_sku       = "22_04-lts-gen2"
image_version   = "latest"

# Alternative images:
# Ubuntu 20.04 LTS:
# image_publisher = "Canonical"
# image_offer     = "0001-com-ubuntu-server-focal"
# image_sku       = "20_04-lts-gen2"
# image_version   = "latest"

# Debian 11:
# image_publisher = "Debian"
# image_offer     = "debian-11"
# image_sku       = "11-gen2"
# image_version   = "latest"

# RHEL 9:
# image_publisher = "RedHat"
# image_offer     = "RHEL"
# image_sku       = "9-lvm-gen2"
# image_version   = "latest"

# Boot Diagnostics
enable_boot_diagnostics = true

# Tags
tags = {
  Environment = "Development"
  ManagedBy   = "Terraform"
  Project     = "MultiCloudDemo"
  Team        = "DevOps"
  CostCenter  = "Engineering"
}

# Custom Data (Cloud-Init)
custom_data = <<-EOF
  #!/bin/bash
  apt-get update
  apt-get install -y nginx
  systemctl start nginx
  systemctl enable nginx
  echo "<h1>Azure VM deployed with Terraform</h1>" > /var/www/html/index.html
EOF
